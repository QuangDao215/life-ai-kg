# LIFE AI Knowledge Graph - Environment Configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# ============================================
# Application
# ============================================
ENVIRONMENT=development   # development | staging | production
LOG_LEVEL=INFO            # DEBUG | INFO | WARNING | ERROR

# ============================================
# PostgreSQL Database
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=lifeai
POSTGRES_PASSWORD=lifeai_dev_password
POSTGRES_DB=lifeai_kg
# Or set explicit URL (overrides above):
# DATABASE_URL=postgresql+asyncpg://lifeai:lifeai_dev_password@localhost:5432/lifeai_kg

# ============================================
# Redis (Celery Broker + Job Store)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
# Or set explicit URL:
# REDIS_URL=redis://localhost:6379/0

# ============================================
# Celery Worker
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_ALWAYS_EAGER=false   # true = run tasks in-process (for testing)

# ============================================
# LLM Provider  *** REQUIRED ***
# ============================================
# Google Gemini (primary provider)
GOOGLE_API_KEY=your-api-key-here
GEMINI_MODEL=gemini-2.5-flash

# Active extractor: gemini | mock
LLM_EXTRACTOR=gemini

# ============================================
# PubMed / NCBI
# ============================================
# Optional: higher rate limits with API key
# Register at: https://www.ncbi.nlm.nih.gov/account/
NCBI_API_KEY=
NCBI_EMAIL=your-email@example.com

# ============================================
# KG Pipeline
# ============================================
CHUNK_SIZE=1000              # characters per chunk
CHUNK_OVERLAP=200            # overlap between chunks
EXTRACTION_CONFIDENCE_THRESHOLD=0.5
MAX_ENTITIES_PER_CHUNK=20
MAX_RELATIONS_PER_CHUNK=30

# ============================================
# API Server
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_RELOAD=false
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
